extends layouts/knockout

block content

  md-toolbar(ng-controller='HomeController as home', ng-show='!showSearch')
    div.md-toolbar-tools
      md-button.menuBtn(ng-click="home.toggleSidenav('left')", aria-label='Menu')
        ng-md-icon(icon='menu')
      h3
        strong HIVE  
      h6 .media
      
      span(flex)
      
      iframe(src="http://nodeknockout.com/iframe/srs", frameborder="0", scrolling="no", allowtransparency="true", width="115", height="25")
      
      span(flex)
      md-button(aria-label='Search', ng-click='showSearch = !showSearch')
        ng-md-icon(icon='search')
      md-button(aria-label='Open Settings', ng-click='home.showListBottomSheet($event)')
        ng-md-icon(icon='more_vert')


  ui-view(flex layout='column')
      //div.inset(hide-sm ng-view)
  
block scripts
  script(src='//cdn.plyr.io/1.3.6/plyr.js')
  script(src='/js/hive.js')
